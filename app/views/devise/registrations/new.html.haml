.row.nomargin
  .hidden-xs.col-sm-1.col-md-2
    = image_tag('spacer_200.gif')

#main
  .signin-content.container
    .row
      .col-xs-12.col-sm-12.col-md-7.col-lg-8
        = image_tag('screens.png', class: 'img-responsive')
        %p.lead
          Create user polls and questionnaires on a whole new level! Strengthen your customer loyalty by receiving feedback and evaluations. Read at a glance graphics, allow you to see results quickly.
      .col-xs-12.col-sm-12.col-md-5.col-lg-4
        .well.no-padding
          #pseudo-login
            %header
              Sign up
            -#= bootstrap_form_for(resource, as: resource_name, layout: :vertical, label_col: "col-lg-12" ,  control_col: "col-md-12 nopadding", url: registration_path(resource_name)) do |f|
            = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "smart-form client-form", role: "form", multipart: true}) do |f|
              = f.hidden_field :plan_id
              = f.hidden_field :referrer_code, value: session[:referrer_code]
              %fieldset
                = devise_error_messages!
                %section
                  %label.input
                    = f.email_field :email, placeholder: 'Email', autofocus: true
                %section
                  %label.input
                    = f.text_field :first_name, placeholder: 'First name'
                %section
                  %label.input
                    = f.text_field :last_name, placeholder: 'Last name'
                %section
                  %label.input
                    = f.password_field :password, placeholder: 'Password'
                %section
                  %label.input
                    = f.password_field :password_confirmation, placeholder: 'Confirm password'
                %section.row
                  .col-sm-12
                    %button.btn-omniauth.btn-signin{ type: 'submit' }
                      Register now
                      %span
                %section.shared-links-extern
                  = render "devise/shared/links"