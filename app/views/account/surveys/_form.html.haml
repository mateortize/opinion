= bootstrap_form_for([:account, @survey], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f|
  .row 
    .col-lg-6
      = f.text_field :title
      = f.text_area :description, rows: 10
    .col-lg-6
      = f.select :enabled, [false, true]
      - if !@survey.logo.blank?
        = f.form_group do
          = image_tag(@survey.logo_url, :class => 'img-responsive img-thumbnail')
          = f.check_box :remove_logo
      - else
        = f.file_field :logo

  .row
    .col-lg-12    
      .f32.languages
        - locales = available_locales.collect{|key, value| [key.to_s, country_flag(key)]}
        - count = (locales.count / 4.0).ceil
        - 4.times do |n|
          .col-md-3
            = f.collection_check_boxes :locales, 
                locales.sort[count*n..(count*(n+1)-1)],
                :first, 
                :last,
                hide_label: :true,
                label_col: "",
                control_col: "col-md-12"
  
  %hr
  = f.form_group do
    = f.submit "Next", class: 'btn btn-primary'
    - unless @survey.new_record?
      = link_to "Edit Questions", account_survey_questions_path(@survey), class: 'btn btn-primary'
    = link_to 'Cancel', :back, class: 'btn btn-default'