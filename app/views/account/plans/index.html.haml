.row
  .col-sm-12
    %h1 #{@plans.count} Plans
    .row
      - Plan.active.each_with_index do |plan, i|
        .col-xs-12.col-sm-6{ class: "col-md-#{12/@plans.count}" }
          .panel.pricing-big{class: "panel-#{plan_classes[i]}"}
            .panel-heading
              .panel-title.text-center
                = plan.name
            .panel-body.text-align-center
              .the-price
                %h3.text-center
                  %strong
                    = plan.price == 0 ? 'free' : money_with_cents_and_with_symbol(plan.price)
                  %span.subscript
                    - unless plan.price == 0
                      = "/ #{pluralize(plan.duration, 'month')}"
              .the-description
                = plan.description

            .panel-footer.text-align-center
              - if account_signed_in?
                - if plan.id != 1
                  = link_to 'Use', new_account_subscription_path(plan_id: plan.id), class: 'btn btn-primary btn-block'  
              - else
                = link_to 'Use', new_account_registration_path(plan_id: plan.id), class: 'btn btn-primary btn-block'

