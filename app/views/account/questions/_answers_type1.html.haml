.col-lg-12
  %p.text-right
    = link_to new_account_survey_question_answer_path(survey, question), class: "btn btn-primary", "data-target" => "#modal", "data-toggle" => "modal" do
      Add New Answer

.col-lg-12
  - question.answers.each do |answer|
    .col-lg-4.panel
      %h4.checkbox
        %label
          = check_box_tag "answers[]", answer.id, false
          = answer.text
      %hr
      - if !answer.image.blank?
        %a{:rel => 'lightbox', :href => answer.image_url}
          %span.glyphicon.glyphicon-eye-open

      = link_to edit_account_survey_question_answer_path(answer.question.survey, answer.question, answer), class: "btn btn-primary", "data-target" => "#modal", "data-toggle" => "modal" do
        %span.glyphicon.glyphicon-edit
      = link_to account_survey_question_answer_path(survey, question, answer), :class => 'btn btn-danger', data: { confirm: 'Are you sure to delete?' }, method: :delete do
        %span.glyphicon.glyphicon-trash
