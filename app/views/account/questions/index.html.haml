= render 'account/surveys/tabs'

#tab1.tab-pane
  %p.text-right
    = link_to 'Add New Question', new_account_survey_question_path(@survey), class: 'btn btn-primary'
  .row
    .col-xs-12.table-responsive
      #accordion.panel-group

      #list-table.table
        .row
          .col-md-6
            %i.icon.icon-tag
            Text
          .col-md-2
            %i.icon.icon-list-numbered
            Answers
          .col-md-1
            %i.icon.icon-tags
            Type
          .col-md-1
            Position
          .col-md-2.actions
            %i.icon.icon-cog-alt
            Actions
        %hr
        = render @questions