%tr
  %td= survey.title
  %td= survey.enabled
  %td= survey.questions.count
  %td= survey.submission_count
  %td
    = time_ago_in_words(survey.created_at)
    ago
  %td
    = time_ago_in_words(survey.updated_at)
    ago
  %td.text-right
    = link_to survey_path(survey) do
      %span.glyphicon.glyphicon-eye-open
    = link_to edit_admin_survey_path(survey) do
      %span.glyphicon.glyphicon-pencil
    = link_to admin_survey_path(survey), data: { confirm: 'Are you sure to delete?' }, method: :delete do
      %span.glyphicon.glyphicon-trash