#content.mt0
  #showsurvey.container
    #content.col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.panel.nopadding
      %h2.showhl
        %i.icon.icon-list-numbered
        = @survey.title

      - if !@survey.logo.blank?
        = image_tag(@survey.logo_url, :class => '' ,:style => 'width:100%' )
      %p.bg-primary.addpadding= @survey.description
    .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.nopadding
      = form_tag submit_survey_path(@survey), method: :post, id: "submit-survey-#{@survey.id}" do |f|
        - @survey.questions.each do |question|
          .question.panel
            = render 'questions', question: question
        - if @survey.answers.count > 0
          .pull-right.panel.col-md-12.text-right
            = submit_tag 'Submit', class: 'btn btn-primary'

